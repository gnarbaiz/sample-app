<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph"
            app:startDestination="@+id/newsFragment">

    <fragment
            android:id="@+id/newsFragment"
            android:name="com.gnarbaiz.android.news.ui.NewsFragment"
            tools:layout="@layout/fragment_news" android:label="@string/app_name">
        <action android:id="@+id/action_newsFragment_to_detailFragment" app:destination="@id/detailFragment"/>
    </fragment>
    <fragment android:id="@+id/detailFragment" android:name="com.gnarbaiz.android.news.ui.DetailFragment"
              android:label="fragment_detail" tools:layout="@layout/fragment_detail">
        <argument android:name="article" app:argType="com.gnarbaiz.android.news.domain.Article"/>
    </fragment>

</navigation>